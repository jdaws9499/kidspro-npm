{
  "manifest_version": 2,
  "name": "Kidspro Npm",
  "version": "0.1.0",
  "description": "Guides kids to browse Internet more safely by tracking kids appropriate ratings on visiting websites",
  "icons": {
    "16": "icons/abc_icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/abc_icon.png"
    },
    "default_title": "Kidspro Npm",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage","webRequest", "webRequestBlocking", "scripting", "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}